<!DOCTYPE html>
<html>
  <head>
    <title>MovieReview</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="nav">
        <div class="header__left">
          <%= link_to "MovieReview", root_path %>
        </div>
        <% if user_signed_in? %>
          <div class="header__right">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :header__logout %>
            <%= link_to "投稿する", new_review_path, class: :header__btn %>
          </div>
        <% else %>
          <div class="nav__right">
            <%= link_to "ログイン", new_user_session_path, class: :header__btn %>
            <%= link_to "新規登録", new_user_registration_path, class: :header__btn %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
