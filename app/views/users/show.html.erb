<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">好きな映画</th>
            <td class="table__col2"><%= @user.favorite_movie %></td>
          </tr>
          <tr>
            <th class="table__col1">好きなジャンル</th>
            <td class="table__col2"><%= @user.favorite_genre.name %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.name}さんの投稿"%>
      </h2>
      <div class="user__card">
        <%= render partial: 'reviews/review', collection: @user.reviews %>
      </div>
    </div>
  </div>
</div>