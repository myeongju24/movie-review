<div class="container">
  <h3>投稿画面</h3>
  <%= form_with model: @review, local: true do |f|%>
    <div class="field">
      <%= f.label :title, "映画のタイトル" %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
     <%= f.label :image, "映画の画像" %><br />
     <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.label :points_id, "点数(10点満点、5点が面白いかどうかの基準です)" %><br />
      <%= f.collection_select(:points_id, Point.all, :id, :name, {}, {class:"points-select"}) %><span>/10点</span>
    </div>

    <div class="field">
      <%= f.label :summary, "一言レビュー" %><br />
      <%= f.text_area :summary, class: :form_summary %>
    </div>

    <div class="field">
      <%= f.label :contents, "レビュー" %><br />
      <%= f.text_area :contents, class: :form_contents %>
    </div>

    <div class="actions">
      <%= f.submit "投稿する", class: :form_btn  %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  <% end %>
</div>