<div class="card">
  <%= image_tag review.image, class: 'review-image' if review.image.attached? %>
  <div class="card__body">
    <%= link_to review.title, review_path(review.id), method: :get, class: :card__title %>
    <p class="card__summary">
      <%= review.summary %>
    </p>
    <%#= link_to review.user.name, user_path(review.user), class: :card__user %>
  </div>
</div>